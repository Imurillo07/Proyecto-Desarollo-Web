@model DW.Models.tienda

@{
    ViewBag.Title = "Delete";
}


<div class="contenedore">
    <h2>Delete</h2>
    <h3>Are you sure you want to delete this?</h3>
    <h4>tienda</h4>

    <dl class="info-delete">
        <dt>
            <h4>Nombre</h4>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_tienda)
        </dd>

        <dt>
            <h4>Estado</h4>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.estado)
        </dd>

        <dt>
            <h4>Descripcion</h4>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion_tienda)
        </dd>

        <dt>
            <h4>Telefono</h4>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefono_tienda)
        </dd>

        <dt>

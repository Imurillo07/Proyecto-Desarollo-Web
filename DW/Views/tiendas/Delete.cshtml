        box-shadow: 5px 5px 5px 5px rgba(0, 0, 0, 0.2);
    }

    .info-delete, h2 {
        margin: 5px;
        text-align: center;
    }

    .boton {
        background-color: white;
        border-radius: 10px;
        border-width: 0px;
